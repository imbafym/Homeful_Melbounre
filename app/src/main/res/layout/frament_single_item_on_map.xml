<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.one.feezhomeful.MainActivity">

<com.google.android.gms.maps.MapView
    android:id="@+id/map_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="2dp"
    android:layout_marginRight="2dp"
    android:layout_marginTop="2dp" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_alignParentTop="true"


        android:layout_marginBottom="22dp"
        android:src="@drawable/ic_back_arrow_big"
        android:visibility="visible"
        app:backgroundTint="@color/cast_expanded_controller_seek_bar_progress_background_tint_color"
        app:fabSize="mini"
        android:layout_alignStart="@+id/map_view" />

</RelativeLayout>