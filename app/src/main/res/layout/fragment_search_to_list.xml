<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bright_background">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/search_Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:fontFamily="sans-serif-condensed"

                android:gravity="center"
                android:maxLines="1"
                android:text="Shelter Lists"
                android:textSize="24sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <EditText
                android:id="@+id/search_text_list"
                android:layout_width="80dp"
                android:layout_height="36dp"
                android:layout_weight="0.91"
                android:background="@drawable/shape_corner_white"
                android:gravity="center"

                android:hint="Search By Name, Suburb, Open Status"
                android:inputType="textPersonName"
                android:textSize="14sp" />

            <ImageButton
                android:id="@+id/search_button_list"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:layout_gravity="left"
                android:background="@drawable/ic_search_button_list"
                android:text="Search" />

            <Button
                android:id="@+id/show_map_button"
                android:layout_width="37dp"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:background="@drawable/ic_location_show_all_list"

                android:textSize="12sp" />

        </LinearLayout>
    </LinearLayout>


    <ListView
        android:id="@+id/listView_search_to_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:dividerHeight="10dp"
        android:divider="@null"/>
</LinearLayout>