<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroud_customize"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_bottomSheet_Title"

            android:layout_width="match_parent"
            android:layout_height="69dp"
            android:background="#a9a9a9"
            android:gravity="center"
            android:text="this is title"
            android:textColor="#000"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">



            <TextView
                android:id="@+id/tv_bottomSheet_Details"
                android:layout_width="fill_parent"
                android:layout_height="141dp"
                android:background="@null"
                android:text="This is content"
                android:maxLines="3"
                android:scrollbars="vertical"
                android:textColor="#000"
                android:textSize="18sp" />



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="98dp"
                android:layout_height="29dp"
                android:src="@drawable/ic_location"
                />

            <TextView
                android:id="@+id/tv_bottomSheet_Address"
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:text="this is address"
                android:textColor="#000" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="98dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_phone"
                />

            <TextView
                android:id="@+id/tv_bottomSheet_Phone"
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:text="this is Phone"
                android:textColor="#000" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="98dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_website"
                />

            <TextView
                android:id="@+id/tv_bottomSheet_Website"
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:text="this is Website"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="31dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <ImageView
                android:layout_width="98dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_time"
                />

            <Spinner
                android:id="@+id/spinner1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.10" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="98dp"
                android:layout_height="31dp"
                android:src="@drawable/ic_user" />

            <TextView
                android:id="@+id/tv_bottomSheet_Who"
                android:layout_width="match_parent"
                android:layout_height="98dp"
                android:text="this is For whom"
                android:textColor="#000" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="98dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_pencil"
                />

            <TextView
                android:id="@+id/tv_bottomSheet_Wh1o"
                android:layout_width="match_parent"
                android:layout_height="199dp"
                android:text="Comment content"
                android:textColor="#000" />



        </LinearLayout>


    </LinearLayout>
</android.support.v4.widget.NestedScrollView>


